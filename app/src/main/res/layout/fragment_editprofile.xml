<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#008577"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <RelativeLayout
        android:id="@+id/updateprofile_Layout"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_UpdateProfil"
            android:background="@drawable/corners"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="15dp"

            android:layout_marginRight="30dp"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15dp">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextFirsttName_UpdateProfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/frist_name"
                            android:inputType="textPersonName"
                            android:textColor="#1976D2"
                            android:textStyle="normal" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextLastName_UpdateProfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/last_name"
                            android:inputType="textPersonName"
                            android:textColor="#1976D2"
                            android:textStyle="normal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextMatherName_UpdateProfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mather_name"
                            android:inputType="textPersonName"
                            android:textColor="#1976D2"
                            android:textStyle="normal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextEmail_UpdateProfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:textColor="#1976D2"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextPassword_UpdateProfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            android:textColor="#1976D2"
                            android:inputType="textPassword" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextPhoneNum_UpdateProfil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/phone_number"
                                android:textColor="#1976D2"

                                android:inputType="number" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextBabeBirthday_UpdateProfil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/baby_birthday"
                                android:inputType="date"
                                android:onClick="setDate"
                                android:textColor="#1976D2" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextHeight_UpdateProfil"
                                android:inputType="number"
                                android:layout_width="match_parent"
                                android:textColor="#1976D2"
                                android:layout_height="wrap_content"
                                android:hint="@string/height_of_baby" />

                        </com.google.android.material.textfield.TextInputLayout>



                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextWeight_UpdateProfil"
                                android:inputType="number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#1976D2"
                                android:hint="@string/weight_of_baby"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">


                            <RadioGroup
                                android:id="@+id/m_Gender_UpdateProfil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="73dp"
                                    android:layout_height="match_parent"
                                    android:hint="@string/gender"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                                <RadioButton
                                    android:id="@+id/r_Male_UpdateProfil"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:buttonTint="#1A99C4"
                                    android:hint="@string/male" />

                                <RadioButton
                                    android:id="@+id/r_Fmale_UpdateProfil"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:buttonTint="#1A99C4"
                                    android:hint="@string/female" />
                            </RadioGroup>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:id="@+id/textViewBloodType_UpdateProfil"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:hint="@string/blood_type"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <Spinner
                                    android:id="@+id/spinnerBloodType_UpdateProfil"
                                    android:layout_width="80dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="10dp"
                                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                                    android:entries="@array/blood"
                                    android:focusableInTouchMode="false"
                                    android:scrollbarSize="3dp"
                                    android:spinnerMode="dropdown">

                                </Spinner>

                            </LinearLayout>

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">
                            <RelativeLayout
                                android:id="@+id/checkbox_layoyt3_UpdateProfil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/textViewsn_UpdateProfil"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="15dp"
                                    android:hint="@string/special_needs"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <CheckBox
                                    android:id="@+id/checkboxsn_UpdateProfil"
                                    android:layout_width="80dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentLeft="@+id/textViewsn_UpdateProfil"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginLeft="29dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="87dp"
                                    android:layout_toEndOf="@+id/textViewsn_UpdateProfil"
                                    android:buttonTint="#1A99C4"
                                    android:hint="@string/yes"
                                    android:textColor="#ffffff"
                                    android:textSize="18dp" />
                            </RelativeLayout>

                            <Button
                                android:id="@+id/btn__UpdateProfil"
                                style="@style/DefaultButton"
                                android:layout_width="168dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="25dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_fill2"
                                android:clickable="true"
                                android:hint="@string/save_changes"
                                android:textSize="20sp" />

                        </com.google.android.material.textfield.TextInputLayout>



                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


            </ScrollView>

        </RelativeLayout>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_profile_photo_UpdateProfil"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            android:layout_gravity="center_horizontal"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/title_UpdateProfil"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/photocercle"
            android:elevation="4dp" />
        <TextView
            android:id="@+id/title_UpdateProfil"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/update_user_profile"
            android:textColor="#fff"
            android:textSize="26sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>
