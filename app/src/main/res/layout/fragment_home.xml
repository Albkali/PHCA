<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/vac_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/vaccination"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="ClickToVaccination"
        android:text="@string/vacc_child_home_btn"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="#FA070707"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/ped_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ped_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/btn_child_ped"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="ClickToPediatrician"
        android:text="@string/Pediatrician"
        android:textAlignment="viewStart"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/cal_btn"
        app:layout_constraintEnd_toEndOf="@+id/vac_btn"
        app:layout_constraintStart_toStartOf="@+id/vac_btn"
        app:layout_constraintTop_toBottomOf="@+id/vac_btn" />

    <Button
        android:id="@+id/cal_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/btn_cal"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="click_bnt_mbi"
        android:text="@string/calculate_bmi"
        android:textAlignment="viewStart"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/sn_btn"
        app:layout_constraintEnd_toEndOf="@+id/ped_btn"
        app:layout_constraintStart_toStartOf="@+id/ped_btn"
        app:layout_constraintTop_toBottomOf="@+id/ped_btn" />

    <Button
        android:id="@+id/sn_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/btn2_sn"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="ClickToCSHCN"
        android:textAlignment="viewStart"
        android:textSize="34sp"
        android:text="@string/CSHCN"
        app:layout_constraintBottom_toTopOf="@+id/article_btn"
        app:layout_constraintEnd_toEndOf="@+id/cal_btn"
        app:layout_constraintStart_toStartOf="@+id/cal_btn"
        app:layout_constraintTop_toBottomOf="@+id/cal_btn" />

    <Button
        android:id="@+id/article_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_ar"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="ClickToArticle"
        android:text="@string/articles"
        android:textAlignment="viewStart"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sn_btn"
        app:layout_constraintStart_toStartOf="@+id/sn_btn"
        app:layout_constraintTop_toBottomOf="@+id/sn_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>